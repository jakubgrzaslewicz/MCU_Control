<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="jakubgrzaslewicz.pl.mcucontrol.Activities.RegisterDevice"
    tools:showIn="@layout/activity_register_device">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:scaleType="fitCenter"
            app:srcCompat="@mipmap/nodemcu" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/deviceSSID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:text="MCU-HUB-CLIENT-XXXXXX"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp"
            app:fontFamily="sans-serif-smallcaps" />

        <com.baoyachi.stepview.VerticalStepView
            android:paddingTop="15dp"
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
